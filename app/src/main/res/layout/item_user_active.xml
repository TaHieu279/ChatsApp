<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserActiveChatMain"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bo_tron_item_100"
        android:scaleType="centerCrop"
        android:src="@drawable/user_default" />

    <View
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/bo_tron_item_20"
        android:backgroundTint="#63FF00"
        android:backgroundTintMode="multiply" />

    <TextView
        android:id="@+id/txtNameUserActiveChatMain"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/imgUserActiveChatMain"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:maxHeight="40dp"/>

</RelativeLayout>