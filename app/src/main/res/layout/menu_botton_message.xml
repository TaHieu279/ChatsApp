<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">

    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/cameraMenuBottomMessage"
        android:layout_marginStart="7dp"
        android:src="@drawable/ic_camera"
        android:layout_width="0dp"
        android:layout_height="36dp"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/pictureMenuBottomMessage"
        android:layout_marginStart="7dp"
        android:src="@drawable/m_picture"
        android:layout_width="0dp"
        android:layout_height="38dp"/>

    <EditText
        android:maxHeight="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:id="@+id/inputMessMenuBottonMessage"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:hint="Aa"
        android:textSize="18sp"
        android:background="@drawable/bo_tron_item_20"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/sendMenuBottomMessage"
        android:layout_margin="7dp"
        android:src="@drawable/ic_send"
        android:layout_width="0dp"
        android:layout_height="36dp"/>

</LinearLayout>