<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar_forget_pass"
        android:id="@+id/toolbarForgetPassXacMinh"/>

    <TextView
        android:id="@+id/txtNameAppForgetPassXacMinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarForgetPassXacMinh"
        android:layout_marginStart="12sp"
        android:layout_marginTop="48sp"
        android:layout_marginEnd="12sp"
        android:layout_marginBottom="12sp"
        android:gravity="center"
        android:text="THAY ĐỔI MẬT KHẨU"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtInputLayoutAccountForgetPassXacMinh"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNameAppForgetPassXacMinh"
        android:layout_marginStart="12dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="12dp"
        android:hint="Email"
        android:textColorHint="@color/black">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtInputEdtAccountForgetPassXacMinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtThongBaoForgetPassXacMinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputLayoutAccountForgetPassXacMinh"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Chúng tôi sẽ gửi link tạo mật khẩu đến email của bạn."
        android:textColor="@color/black"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btnConfirmForgetPassXacMinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtThongBaoForgetPassXacMinh"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bo_tron_button"
        android:paddingStart="24dp"
        android:paddingTop="7dp"
        android:paddingEnd="24dp"
        android:paddingBottom="7dp"
        android:text="Xác nhận"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_below="@+id/btnConfirmForgetPassXacMinh"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtForgetPassworForgetPassXacMinh"
            android:textColor="#000000"
            android:text="Sử dụng tài khoản khác?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtNewAccountForgetPassXacMinh"
            android:layout_marginStart="5dp"
            android:textColor="#0091EA"
            android:text="Đăng nhập"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>